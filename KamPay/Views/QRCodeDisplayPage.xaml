<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:res="clr-namespace:KamPay.Services"
             x:Class="KamPay.Views.QRCodeDisplayPage"
             x:DataType="vm:QRCodeViewModel"
             Title="{Binding PageTitle}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <Label Text="{Binding PageTitle}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,10"/>
            <Label Text="{Binding InstructionText}" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{StaticResource Gray600}"/>

            <!-- â±ï¸ SÃ¼re GÃ¶stergesi -->
            <Frame BackgroundColor="{StaticResource Primary}" Padding="10" CornerRadius="8" IsVisible="{Binding MyDelivery.QRCodeData, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" HorizontalOptions="Center">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="â±ï¸" FontSize="18" TextColor="White" VerticalOptions="Center"/>
                    <Label Text="{Binding TimeRemaining}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- ðŸ”’ PIN GÃ¶sterimi (Kendi QR kodunuz iÃ§in) -->
            <Frame BackgroundColor="{StaticResource Secondary}" Padding="15" CornerRadius="10" IsVisible="{Binding MyDelivery.VerificationPin, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="5">
                    <Label Text="ðŸ”’ PIN Kodunuz" FontSize="14" TextColor="White" HorizontalOptions="Center"/>
                    <Label Text="{Binding MyDelivery.VerificationPin}" 
                           FontSize="32" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           CharacterSpacing="5"/>
                    <Label Text="Bu kodu karÅŸÄ± tarafa gÃ¶sterin" FontSize="12" TextColor="White" HorizontalOptions="Center" Opacity="0.8"/>
                </VerticalStackLayout>
            </Frame>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto, Auto" Margin="0,20,0,0" ColumnSpacing="15">
                <Label Grid.Row="0" Grid.Column="0" Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[MyProduct]}" HorizontalOptions="Center" FontAttributes="Bold"/>
                <Frame Grid.Row="1" Grid.Column="0" CornerRadius="10" Padding="10" BorderColor="{StaticResource Gray200}" HasShadow="True">
                    <Grid>
                        <zxing:BarcodeGeneratorView 
            x:Name="barcodeGenerator"
            Format="QrCode"  
            Value="{Binding MyDelivery.QRCodeData}"
            IsVisible="{Binding MyDelivery.IsUsed, Converter={StaticResource InverseBoolConverter}}"
            ForegroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"/>

                        <Label Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[Delivered]}"
               IsVisible="{Binding MyDelivery.IsUsed}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="Large"
               FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <Label Grid.Row="2" Grid.Column="0" Text="{Binding MyDelivery.ProductTitle}" HorizontalOptions="Center" FontSize="12"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[OtherProduct]}" HorizontalOptions="Center" FontAttributes="Bold"/>
                <Frame Grid.Row="1" Grid.Column="1" HeightRequest="150" WidthRequest="150" Padding="10" HorizontalOptions="Center" BorderColor="{StaticResource Gray300}">

                    <Label HorizontalOptions="Center" VerticalOptions="Center">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="Text" Value="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[WaitingConfirmation]}"/>
                                <Setter Property="TextColor" Value="{StaticResource Gray500}"/>
                                <Setter Property="FontAttributes" Value="None"/>

                                <Style.Triggers>
                                    <DataTrigger TargetType="Label"
                                 Binding="{Binding OtherUserDelivery.IsUsed}"
                                 Value="True">
                                        <Setter Property="Text" Value="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[Received]}"/>
                                        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                                        <Setter Property="FontAttributes" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>

                </Frame>
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding OtherUserDelivery.ProductTitle}" HorizontalOptions="Center" FontSize="12"/>
            </Grid>

            <!-- ðŸ“¸ FAZ 2: Teslimat FotoÄŸrafÄ± BÃ¶lÃ¼mÃ¼ -->
            <StackLayout IsVisible="{Binding PhotoRequired}" Margin="0,30,0,0" Spacing="15">
                <Label Text="ðŸ“¸ Teslimat FotoÄŸrafÄ±" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center"/>
                
                <!-- FotoÄŸraf YÃ¼klendiyse GÃ¶ster -->
                <Frame IsVisible="{Binding IsPhotoUploaded}" 
                       CornerRadius="10" 
                       Padding="0" 
                       BorderColor="{StaticResource Primary}"
                       HasShadow="True">
                    <Image Source="{Binding DeliveryPhotoSource}"
                           HeightRequest="200" 
                           Aspect="AspectFill">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ViewFullPhotoCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Frame>
                
                <!-- FotoÄŸraf YÃ¼klenmediyse ButonlarÄ± GÃ¶ster -->
                <StackLayout IsVisible="{Binding IsPhotoUploaded, Converter={StaticResource InverseBoolConverter}}" 
                             Spacing="10">
                    <Button Text="ðŸ“· FotoÄŸraf Ã‡ek" 
                            Command="{Binding TakeDeliveryPhotoCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>
                    <Button Text="ðŸ–¼ï¸ Galeriden SeÃ§" 
                            Command="{Binding PickPhotoFromGalleryCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"/>
                </StackLayout>
            </StackLayout>

            <Button Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[ScanOtherCode]}" 
                    Command="{Binding ScanQRCodeCommand}" 
                    Margin="0,30,0,0"
                    IsEnabled="{Binding OtherUserDelivery.IsUsed, Converter={StaticResource InverseBoolConverter}}"/>

            <!-- ðŸ• SÃ¼re Uzatma Butonu -->
            <Button Text="â±ï¸ SÃ¼reyi Uzat" 
                    Command="{Binding ExtendTimeCommand}"
                    IsVisible="{Binding CanExtendTime}"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="White"
                    Margin="0,10,0,0"/>

            <!-- âŒ Ä°ptal Butonu -->
            <Button Text="âŒ TeslimatÄ± Ä°ptal Et" 
                    Command="{Binding CancelDeliveryCommand}"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    Margin="0,10,0,0"/>

            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>