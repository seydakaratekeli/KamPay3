<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:models="clr-namespace:KamPay.Models"
             xmlns:converters="clr-namespace:KamPay.Converters"
             xmlns:res="clr-namespace:KamPay.Services"
             x:Class="KamPay.Views.FavoritesPage"
             x:DataType="vm:FavoritesViewModel"
             Title="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[Favorites]}"
             BackgroundColor="#FAFAFA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="#FAFAFA">

        <!-- REFRESH VIEW -->
        <RefreshView Command="{Binding RefreshFavoritesCommand}"
                     IsRefreshing="{Binding IsRefreshing}"
                     RefreshColor="{StaticResource Primary}"
                     IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">

            <CollectionView ItemsSource="{Binding FavoriteItems}"
                            SelectionMode="None">

                <!-- EMPTY VIEW -->
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Spacing="15">
                        <Label Text="❤️"
                               FontSize="60"
                               HorizontalTextAlignment="Center"
                               Opacity="0.3"/>
                        <Label Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[NoFavoritesYet]}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray600}"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[AddFavoritesHint]}"
                               FontSize="13"
                               TextColor="{StaticResource Gray400}"
                               HorizontalTextAlignment="Center"
                               Margin="20,5,20,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <!-- FAVORİ ÜRÜN ŞABLONU -->
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Favorite">

                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[Remove]}"
                                               BackgroundColor="{StaticResource Danger}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FavoritesViewModel}}, Path=RemoveFavoriteCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="10,5"
                                   Padding="0"
                                   CornerRadius="20"
                                   BorderColor="#E0E0E0"
                                   BackgroundColor="White"
                                   HasShadow="True">

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FavoritesViewModel}}, Path=GoToProductDetailCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="120,*">

                                    <!-- ÜRÜN FOTO -->
                                    <Image Grid.Column="0"
                                           Source="{Binding ProductThumbnail}"
                                           Aspect="AspectFill"
                                           HeightRequest="120"
                                           WidthRequest="120">
                                        <Image.Clip>
                                            <RoundRectangleGeometry Rect="0,0,120,120"
                                                                    CornerRadius="20" />
                                        </Image.Clip>
                                    </Image>

                                    <!-- DETAYLAR -->
                                    <VerticalStackLayout Grid.Column="1"
                                                         Padding="15,10"
                                                         Spacing="6">

                                        <Label Text="{Binding ProductTitle}"
                                               FontAttributes="Bold"
                                               FontSize="15"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               TextColor="#212121" />

                                        <Label Text="{Binding PriceText}"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="{StaticResource Primary}" />

                                        <Label Text="{Binding TimeAgoText}"
                                               FontSize="11"
                                               TextColor="#757575" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>

                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </RefreshView>

        <!-- LOADING -->
        <Grid IsVisible="{Binding IsLoading}"
              BackgroundColor="#FAFAFA">
            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="15">
                <ActivityIndicator IsRunning="True"
                                   Color="{StaticResource Primary}"
                                   WidthRequest="50"
                                   HeightRequest="50"/>
                <Label Text="{Binding Source={x:Static res:LocalizationResourceManager.Instance}, Path=[FavoritesLoading]}"
                       TextColor="{StaticResource Gray600}"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Grid>

    </Grid>

</ContentPage>
